<% @hot_stocks.each do |stock| %>
  <%= image_tag "http://chart.finance.yahoo.com/t?s=#{stock[:symbol]}&lang=en-SG&region=SG&width=300&height=180" %>
  &nbsp;
  <%= image_tag "http://chart.finance.yahoo.com/v?s=#{stock[:symbol]}&lang=en-SG&region=SG&width=300&height=180" %>
  &nbsp;
  <%= image_tag "http://ichart.finance.yahoo.com/c/bb/t/#{stock[:symbol]}?lang=en-US&region=SG&width=300&height=180" %>
  <br />
  <table>
    <tr>
      <th>Keys</th>
      <th>Values</th>
    </tr>
    <% stock.each do |(k, v)| %>
      <tr>
        <td><%= k %></td>
        <td>
          <% if k == :news_feed %>
            <ol>
              <% v.each do |news| %>
                <li><%= link_to "#{news[:news_published].strftime("%d %b %Y")} - #{news[:news_title]}", news[:news_url] %></li>
              <% end %>
            </ol>
          <% else %>
            <%= v %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <br />
  <hr />
<% end %>
